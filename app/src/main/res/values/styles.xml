<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="input_radius">
        <item name="boxCornerRadiusBottomEnd">@dimen/radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius</item>
    </style>
    <style name="no_right_margin" parent="input_radius">
        <item name="android:layout_marginTop">@dimen/margin_textedit</item>
        <item name="android:layout_marginBottom">@dimen/margin_textedit</item>
        <item name="android:layout_marginStart">@dimen/margin_textedit</item>
    </style>
    <style name="countdown_bar">
        <item name="android:textColor">@color/red</item>"
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/normal</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>