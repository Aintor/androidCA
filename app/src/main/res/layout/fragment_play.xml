<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_textedit"
    android:layout_marginRight="@dimen/margin_textedit"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/play_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/stopwatch"/>
    <TextView
        android:id="@+id/stopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/play_hint"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:id="@+id/countdown">
        <TextView
            android:id="@+id/left_bar"
            style="@style/countdown_bar" />
        <TextView
            android:id="@+id/center_bar"
            style="@style/countdown_bar" />
        <TextView
            android:id="@+id/right_bar"
            style="@style/countdown_bar" />
    </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/play_hint"
            app:layout_constraintBottom_toTopOf="@id/ad"
            android:id="@+id/play_grid"
            android:rowCount="4"
            android:columnCount="3"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/card_margin"
            android:visibility="visible"
            app:layout_constraintDimensionRatio="10:1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/ad_image"/>
        </com.google.android.material.card.MaterialCardView>
    <FrameLayout
        android:id="@+id/win_animation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@color/transparent_game">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/win_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/win"
            app:lottie_speed="1.5" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>